

<%= form_for :question, url: questions_path, method: :post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: 'your question here', rows: '10', style: "width: 25%" %>
  </p>

  <p>
    <%= f.submit 'Create Question' %>
  </p>
<% end %>
