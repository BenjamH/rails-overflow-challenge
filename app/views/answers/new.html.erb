
<% if current_user %>

<%= form_for (@answer, remote: true) url: question_answers_path, method: :post do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: 'your answer here', rows: '10', style: "width: 25%" %>
  </p>

  <p>
    <%= f.submit 'Create Question' %>
  </p>
<% end %>

<% end %>
